{
  "name": "vl-ui-multiselect",
  "version": "0.0.4",
  "description": "Gebruik een multiselect om een gebruiker toe te laten om in een lijst van vooropgestelde keuzes te zoeken, en enkele of alle passende keuzes te selecteren",
  "main": "vl-multiselect.js",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:imports && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-multiselect.js -- *.src.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-multiselect/style.css' vl-multiselect.js",
    "release:prepare:commit": "git add -f vl-multiselect.js && git commit --amend --no-edit && git pull",
    "release:prepare:imports": "npm run release:prepare:imports:core && npm run release:prepare:imports:dist",
    "release:prepare:imports:core": "replace '/node_modules/vl-ui-core/vl-core.src.js' '/node_modules/vl-ui-core/vl-core.js' vl-multiselect.js",
    "release:prepare:imports:dist": "replace '../dist/multiselect.js' '/node_modules/vl-ui-multiselect/dist/multiselect.js' vl-multiselect.js",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-multiselect.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-multiselect/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-multiselect#readme",
  "dependencies": {
    "@govflanders/vl-ui-core": "3.7.2",
    "@govflanders/vl-ui-multiselect": "3.7.2",
    "@govflanders/vl-ui-select": "3.7.2",
    "@govflanders/vl-ui-pill": "3.9.0",
    "@govflanders/vl-ui-util": "3.9.0",
    "vl-ui-core": "1.4.6",
    "vl-ui-select": "milieuinfo/webcomponent-vl-ui-select#UIG-163"
  },
  "peerDependencies": {
    "vl-ui-core": "^1.4.3",
    "vl-ui-util": "^1.2.3",
    "vl-ui-select": "milieuinfo/webcomponent-vl-ui-select#UIG-163"
  },
  "devDependencies": {
    "http-server": "0.11.1",
    "np": "3.1.0",
    "replace": "1.1.1",
    "sass": "^1.22.7",
    "sinon": "7.4.2",
    "uglify-es": "github:mishoo/UglifyJS2#harmony",
    "vl-ui-util": "^1.2.23",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  }
}
